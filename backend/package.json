{
  "name": "chat-app-backend",
  "version": "1.0.0",
  "description": "Real-time chat application backend",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsc",
    "start": "npx tsx src/index.ts",
    "dev": "nodemon --exec tsx src/index.ts",
    "migration": "node -e \"require('child_process').execSync('psql -U \\${POSTGRES_USER} -d \\${POSTGRES_DB} -h \\${POSTGRES_HOST} -f database/migrations/init.sql', {stdio: 'inherit'})\""
  },
  "keywords": [
    "chat",
    "websocket",
    "express",
    "postgresql",
    "redis"
  ],
  "type": "module",
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.14.1",
    "redis": "^4.7.0",
    "socket.io": "^4.8.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/pg": "^8.11.11",
    "@types/redis": "^4.0.11",
    "nodemon": "^3.1.9",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2",
    "tsx": "^4.19.3"
  }
}
